{
  "manifest_version": 3,
  "name": "Stock Information Display",
  "version": "1.0",
  "description": "Get instant stock information when reading financial news",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "https://*.yahoo.com/*",
    "https://*.finance.yahoo.com/*",
    "https://*.googlefinance.com/*",
    "https://*.alphavantage.co/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["popup.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Stock Information",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.css", "chart.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
